{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    // --- RIPRISTINATO A TRUE ---
    "noUnusedLocals": true,
    // ---------------------------
    "noUnusedParameters": false, // Lasciamo false per ora, non d√† problemi
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}